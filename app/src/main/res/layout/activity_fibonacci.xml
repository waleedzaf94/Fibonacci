<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Fibonacci"
    android:background="#ff4bccb3">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="FIBONACCI"
        android:id="@+id/titleView"
        android:layout_gravity="center_horizontal"
        android:textSize="36dp"
        android:textAlignment="center"
        android:textColor="#ffd0ff15"
        android:gravity="center"
        android:background="#ff4e95ff"
        android:typeface="monospace"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="250sp"
        android:layout_height="40sp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/inTxt"
        android:layout_below="@+id/titleView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="#ffaeffc7"
        android:gravity="center" />

    <Button
        android:layout_width="130sp"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:id="@+id/calcBtn"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/inTxt"
        android:layout_centerHorizontal="true"
        android:enabled="false" />

    <Button
        android:layout_width="130sp"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:id="@+id/clearBtn"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/calcBtn"
        android:layout_centerHorizontal="true"
        android:enabled="false" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="150sp"
        android:id="@+id/scrollView"
        android:layout_below="@+id/calcBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="#ffaeffc7">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:id="@+id/ansView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:typeface="sans" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
